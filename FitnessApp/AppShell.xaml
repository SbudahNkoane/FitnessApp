<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FitnessApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FitnessApp.Views"
    Shell.FlyoutBehavior="Disabled"
    
    Title="FitnessApp">

   
    <TabBar > 
        <ShellContent  Icon="home.png" Title="Home"
                      ContentTemplate="{DataTemplate views:MainPage}"
                      Route="MainPage" />
        <ShellContent Icon="running1.png" Title="Workouts"
                      ContentTemplate="{DataTemplate views:WorkoutsPage}" 
                      Route="WorkoutsPage"/>
        <ShellContent Icon="session.png" Title="Sessions"
                      ContentTemplate="{DataTemplate views:SessionsPage}" 
                      Route="SessionsPage"/>
    </TabBar>
</Shell>
